<armature>
    <bone name="chest">
        <bone name="head"/>
        <bone name="left_arm">
            <bone name="hand"/>
        </bone>
    </bone>

    <animation>
        <frame>
            <bone-state name="chest" x="0" y="0">
                <bone-state name="head" x="0" y="10"/>

                <bone-state name="left_arm" x="-10" y="10">
                    <bone-state name="hand" x="-15" y="10"/>
                </bone-state>
            </bone-state>
        </frame>

        <frame>
            <bone-state name="chest" x="0" y="5">
                <bone-state name="head" x="0" y="15"/>

                <bone-state name="left_arm" x="-10" y="10">
                    <bone-state name="hand" x="-15" y="10"/>
                </bone-state>
            </bone-state>
        </frame>
    </animation>
</armature>